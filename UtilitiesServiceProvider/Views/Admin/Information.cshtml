
@{
    ViewBag.Title = "Information";
}

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <header>

        <a class="btn btn-success  text-uppercase fw-bolder" href="~/Admin/Update" role="button">Update</a>



    </header>
    <br />
    <center> <h1 class="text-uppercase fst-italic fw-bolder">Welcome @Model.Name</h1></center>

    <br />
    <table class="table table-hover">
        <thead>
            <tr class="table-info shadow text-center text-uppercase fw-bolder">
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Password</th>
                

            </tr>
        </thead>
        <tbody class="table-group-divider">


            <tr class="text-center  fw-bolder">
                <th scope="row">@Model.Id</th>
                <td>@Model.Name</td>
                <td>@Model.Address</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
                <td>@Model.Password</td>
             



            </tr>


        </tbody>
    </table>
    <center>
        <a class="btn btn-danger shadow text-uppercase fw-bolder" href="~/Admin/InformationDownload/@Model.Id " role="button">DOWNLOAD INFORMATION</a>
    </center>
</body>
</html>


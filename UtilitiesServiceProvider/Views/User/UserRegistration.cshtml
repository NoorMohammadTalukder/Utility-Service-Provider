
@{
    ViewBag.Title = "UserRegistration";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<body class="">

    <section class=" d-flex justify-content-center m-3">

        <div class="shadow-lg w-50 ">
            <div class="m-1 p-1 ">
                <table class="  table">
                    <form action="" method="post">
                    <tbody>

                        <tr>
                        </tr>
                        <tr>
                            <td>Name:</td>
                            <td>
                                <input type="text" name="Name" value="" class="form-control" />
                                <span> @Html.ValidationMessage("Name", new { @class = "text-danger" })</span>
                            </td>
                        </tr>
                        <tr>

                            <td>Address</td>
                            <td>
                                <input type="text" name="Address" value="" class="form-control" />
                                <span>@Html.ValidationMessage("Address", new { @class = "text-danger" })</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Email:</td>

                            <td>
                                <input type="text" name="Email" value="" class="form-control" />
                                <span>@Html.ValidationMessage("Email", new { @class = "text-danger" })</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Phone:</td>

                            <td>
                                <input type="text" name="Phone" value="" class="form-control" />
                                <span>@Html.ValidationMessage("Phone", new { @class = "text-danger" })</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Password:</td>

                            <td>
                                <input type="text" name="Password" value="" class="form-control" />
                                <span>@Html.ValidationMessage("Password", new { @class = "text-danger" })</span>
                            </td>
                        </tr>

                      
                            <td><input type="submit" class="btn btn-success" value="Register" /></td>
                        





                    </tbody>

                    </form>


                </table>
            </div>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>


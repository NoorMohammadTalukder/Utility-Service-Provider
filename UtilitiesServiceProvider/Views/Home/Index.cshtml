
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Utility Service Provider</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- styles -->
    <link rel="stylesheet" href="style/style.css">
</head>

<body>
    <!-- header started -->
    <header id="home">
        <nav class="navbar navbar-expand-lg navbar-light bg-dark  fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="images/logo.png" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white" aria-current="page" href="#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/User/UserLogin">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#back-pack">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#subscribe">Subscribe</a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>

        <!-- image slider -->

        <section class="container panda-slider-bg p-3 rounded m-3 bg-dark ">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row d-flex align-items-center">
                            <div class="col-lg-7 ">
                                <h1 class="text-white">
                                    Welcome To Home Utility Service
                                </h1>
                                <p class="text-white">Get the most trustable home service from us.</p>
                               
                                <button class="btn btn-warning"> Register Now</button>
                            </div>
                            <div class="col-lg-5">
                                <img src="https://images.unsplash.com/photo-1505798577917-a65157d3320a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTF8fGhvbWUlMjBzZXJ2aWNlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="...">
                            </div>
                        </div>

                    </div>
                    <div class="carousel-item">
                        <div class="row d-flex align-items-center">
                            <div class="col-lg-7 ">
                                <h1 class="text-white">
                                    Welcome To Home Utility Service
                                </h1>
                                <p class="text-white">Get the most trustable home service from us.</p>

                                <button class="btn btn-warning"> Register Now</button>
                            </div>
                            <div class="col-lg-5">
                                <img src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8aG9tZSUyMHNlcnZpY2V8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row d-flex align-items-center">
                            <div class="col-lg-7 ">
                                <h1 class="text-white">
                                    Welcome To Home Utility Service
                                </h1>
                                <p class="text-white">Get the most trustable home service from us.</p>

                                <button class="btn btn-warning"> Register Now</button>
                            </div>
                            <div class="col-lg-5">
                                <img src="https://images.unsplash.com/photo-1601160458000-2b11f9fa1a0e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8aG9tZSUyMHNlcnZpY2V8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
        </section>
    </header>




    <main>
      

        <!-- Shoes section Started -->

        <section class="container mt-5" id="shoes">
            <h2>Our Services</h2>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var i in Model)
                {
                    <div class="col shadow-lg">
                        <div class="card h-100 border-0 ">
                            <img style="height:250px; width=100%" src="@i.Photo"  class="card-img-top p-3" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@i.Name</h5>
                                <p class="card-text">@i.Details</p>
                                <p><b>Price:</b> @i.Price</p>
                                <button class="btn btn-primary">Get Service </button>
                            </div>
                           
                               
                           
                        </div>
                    </div>
                }


            </div>
        </section>

       

        <!-- Subscribe section started -->
        <section style="height: 300px;" class="container d-flex justify-content-center align-items-center bg-light mt-5 rounded-3" id="subscribe">
            <div>
                <div>
                    <h3>Stay in Touch</h3>
                    <p>Get updates on sales, specials and more</p>
                    <input type="text" class="form-control">
                </div>
                <div class="mt-2">
                    <button class="btn btn-warning ">Submit</button>
                </div>

            </div>

        </section>


    </main>

    <!-- footer started -->
    <footer class="text-center  mt-5">
        <p><small>©2020. Panda Commerce. All rights reserved. Sofia, Bulgaria.</small></p>
    </footer>


    <!-- bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>
